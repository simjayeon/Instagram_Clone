<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detail_profile_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="7dp"
            android:src="@drawable/user"/>

        <TextView
            android:id="@+id/detail_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User name"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>

    <ImageView
        android:id="@+id/detail_content_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_favorite"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_favorite_border"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/btn_comment"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_chat_border"
            android:layout_marginLeft="5dp"
            app:tint="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/detail_favorit_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0명이 좋아합니다"
        android:padding="5dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/detail_content_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#예쁜날"
        android:padding="5dp"
        android:layout_marginLeft="5dp"/>


</LinearLayout>
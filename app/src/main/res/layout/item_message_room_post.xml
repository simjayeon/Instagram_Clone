<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_message_room_post_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="7.5dp"
        android:src="@drawable/ic_account"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_message_room_post_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="sim@sim.com"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/item_message_room_post_img"
        app:layout_constraintRight_toLeftOf="@id/item_message_room_post_img"
        app:layout_constraintTop_toTopOf="@id/item_message_room_post_img" />

    <TextView
        android:id="@+id/item_message_room_post_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="7.5dp"
        android:background="@drawable/edit_text_bg"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:text="안녕하세요"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_message_room_post_img" />

</androidx.constraintlayout.widget.ConstraintLayout>